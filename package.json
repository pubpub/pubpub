  },
  "license": "GPLv2",
  "version": "0.2.0",
  "keywords": [],
  "main": "bin/server.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm run start-prod\" \"npm run start-prod-api\"",
    "start-prod": "node ./node_modules/better-npm-run start-prod",
    "start-prod-api": "node ./node_modules/better-npm-run start-prod-api",
    "build": "node ./node_modules/better-npm-run build",
    "postinstall": "node ./node_modules/better-npm-run build",
    "lint": "eslint src api",
    "lint:watch": "node_modules/eslint-watch/bin/esw --watch --config .eslintrc src api",
    "start-dev": "node ./node_modules/better-npm-run start-dev",
    "start-dev-api": "node ./node_modules/better-npm-run start-dev-api",
    "watch-client": "node ./node_modules/better-npm-run watch-client",
    "dev": "concurrently --raw --kill-others \"npm run watch-client\" \"npm run start-dev\" \"npm run start-dev-api\"",
    "test": "sudo mongod | NODE_PATH=./src mocha $(find src api -name '*.test.js') --compilers js:babel-register --require ./src/tests/mochaEnvInit.js --watch",
    "test-karma": "karma start",
    "test-travis": "NODE_PATH=./src mocha $(find src api -name '*.test.js') --compilers js:babel-register --require ./src/tests/mochaEnvInit.js"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "APIPORT": 3030
      }
    },
    "start-prod-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api:./src",
        "NODE_ENV": "production",
        "APIPORT": 3030
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000,
        "APIPORT": 3030
      }
    },
    "start-dev-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api:./src",
        "NODE_ENV": "development",
        "APIPORT": 3030
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src"
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "analyze-build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/prod.config.js --json | analyze-bundle-size",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
